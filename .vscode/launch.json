    "version": "0.2.0",
    "configurations": [{
        "type": "node",
        "request": "launch",
        "name": "Debug",
        "preLaunchTask": "build",
        "program": "${workspaceRoot}/dist/app.js",
        "smartStep": true,
        "outFiles": [
            "../dist/**/*.js"
        ],
        "protocol": "inspector",
        "env": {
            "NODE_ENV": "development",
            "NODE_TLS_REJECT_UNAUTHORIZED": "0",
            "PORT": "3000",
        },
    }]
}